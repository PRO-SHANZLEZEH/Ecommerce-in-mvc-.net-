<!--content-->
<div class="content">
    <div class="container">
        <div class="content-top">
            <div class="content-top1">
               
                <div class="col-md-6 animated wow fadeInDown animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInDown;">
                    <div class="col-md3">
                        <div class="up-t">
                            <h3>Flat 50% Offer</h3>
                        </div>
                    </div>
                </div>
                
                <div class="clearfix"> </div>
            </div>
            <div class="content-top1">
                @foreach (var product in ViewBag.featuredProducts)
                {
                    <div class="feat_prod_box">
                        <div class="prod_img"><a href="@Url.Action("Details","Product",new { id = product.id})"><img class="img-responsive" src="~/Content/User/images/@product.photo" alt="" border="0"></a></div>
                        <div class="prod_det_box">
                            <div class="box_top"></div>
                            <div class="box_center">
                                <div class="prod_title">@product.name</div>
                                <p class="details">@product.description</p>
                                <a href="@Url.Action("Details","Product",new { id = product.id})" class="more">- more details -</a>
                                <div class="clear"></div>
                            </div>
                            <div class="box_bottom"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                }
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
